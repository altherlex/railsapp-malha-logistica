<h1>Listing paths</h1>

<table>
  <thead>
    <tr>
      <th>Local</th>
      <th>Begin point</th>
      <th>End point</th>
      <th>Distance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @paths.each do |path| %>
      <tr>
        <td><%= path.local %></td>
        <td><%= path.begin_point %></td>
        <td><%= path.end_point %></td>
        <td><%= path.distance %></td>
        <td><%= link_to 'Show', path %></td>
        <td><%= link_to 'Edit', edit_path_path(path) %></td>
        <td><%= link_to 'Destroy', path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

